{
  "name": "pdd-template-static-website-react-flora",
  "version": "1.0.0",
  "description": "Template Static Frontend",
  "author": {
    "name": "Grupo BoticÃ¡rio",
    "email": "franklinalves@grupoboticario.com.br"
  },
  "scripts": {
    "dev": "./scripts.sh dev",
    "test": "chmod u+x scripts.sh ; ./scripts.sh test",
    "test:dev": "./scripts.sh test:dev",
    "build": "./scripts.sh build",
    "update-readme": "scafflater-cli partial:run update-readme"
  },
  "keywords": [
    "scafflater",
    "templater",
    "scaffold"
  ],
  "workspaces": [
    ".scafflater/hooks",
    ".scafflater/helpers",
    ".scafflater/extension"
  ],
  "license": "MIT",
  "dependencies": {
    "@grupoboticario/flora": "0.18.0",
    "@grupoboticario/flora-react": "0.12.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "28.1.1",
    "@types/node": "17.0.41",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-prettier": "4.0.0",
    "fs-extra": "10.1.0",
    "git-cz": "4.9.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.0",
    "prettier": "2.6.2",
    "scafflater": "0.0.97",
    "scafflater-cli": "0.0.97",
    "web-vitals": "^2.1.4"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ignore-path .gitignore --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!**/test-utils/**/*",
      "!src/index*",
      "!src/**/mock/**",
      "!src/reportWebVitals.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)|@?babel)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grupoboticario/pdd-template-static-website-react-flora.git"
  },
  "bugs": {
    "url": "https://github.com/grupoboticario/pdd-template-static-website-react-flora/issues"
  },
  "homepage": "."
}
